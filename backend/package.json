{
  "$schema": "https://json.schemastore.org/package",
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "type": "module",
  "prisma": {
    "seed": "tsx scripts/seed.ts"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:watch": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "prisma:migrate": "dotenv -e .env -- npx prisma migrate dev --schema prisma/schema.prisma",
    "prisma:generate": "taskkill /f /im node.exe >nul 2>&1 || ver>nul && npx prisma generate",
    "prisma:seed": "tsx scripts/seed.ts",
    "postinstall": "npm run prisma:generate"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.1",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "winston": "^3.18.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@prisma/client": "5.14.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "dotenv-cli": "^11.0.0",
    "nodemon": "^3.1.11",
    "prisma": "5.14.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
